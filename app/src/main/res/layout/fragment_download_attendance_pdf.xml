<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="34sp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".download_attendance_pdf">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="330sp"
        android:layout_marginLeft="12sp"
        android:layout_height="40sp"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#E0DCDC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200sp"
            android:layout_height="36sp"
            android:paddingLeft="22sp"
            android:text="Select Branch"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_select_branch"
            android:layout_width="150sp"
            android:layout_height="36sp"
            android:layout_marginLeft="180sp" />
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="330sp"
        android:layout_marginLeft="12sp"
        android:layout_height="40sp"
        android:layout_marginTop="80sp"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#E0DCDC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200sp"
            android:layout_height="36sp"
            android:paddingLeft="22sp"
            android:text="Select Year"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_select_year"
            android:layout_width="179sp"
            android:layout_height="36sp"
            android:layout_marginLeft="150sp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="330sp"
        android:layout_marginLeft="12sp"
        android:layout_height="40sp"
        android:layout_marginTop="140sp"
        app:cardBackgroundColor="#E6E2E2"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200sp"
            android:layout_height="36sp"
            android:paddingLeft="22sp"
            android:text="Select Class"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_select_class"
            android:layout_width="179sp"
            android:layout_height="36sp"
            android:layout_marginLeft="150sp"
            />
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="330sp"
        android:layout_marginLeft="12sp"
        android:layout_height="40sp"
        android:layout_marginTop="200sp"
        app:cardBackgroundColor="#E6E2E2"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/spinner_select_group"
            android:layout_width="179sp"
            android:layout_height="36sp"
            android:layout_marginLeft="150sp"
            />

        <TextView
            android:layout_width="200sp"
            android:layout_height="36sp"
            android:paddingLeft="22sp"
            android:text="Select Group"
            android:textSize="24sp" />
        />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="330sp"
        android:layout_marginLeft="12sp"
        android:layout_height="40sp"
        android:layout_marginTop="260sp"
        app:cardBackgroundColor="#E6E2E2"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/spinner_select_attendance"
            android:layout_width="170sp"
            android:layout_height="36sp"

            android:layout_marginLeft="150sp"
            />

        <TextView
            android:layout_width="150sp"
            android:layout_height="36sp"
            android:paddingLeft="20sp"
            android:text="Attendance"
            android:textSize="24sp" />
        />
    </android.support.v7.widget.CardView>






    <android.support.v7.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="350sp"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/downlnoad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="#000000"
            android:text="Download Attendance"
            android:textColor="@color/white" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="410sp"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/email_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="#000000"
            android:text="Email Attendance"
            android:textColor="@color/white" />
        


    </android.support.v7.widget.CardView>




</FrameLayout>
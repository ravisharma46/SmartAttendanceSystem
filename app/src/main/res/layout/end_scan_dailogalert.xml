<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300sp"
    android:layout_height="130sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="297sp"
        android:layout_height="127sp"
        app:cardBackgroundColor="#E6E2E2"
        app:cardCornerRadius="12sp"
        app:cardElevation="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:text="Do you really want to Submit Attendance?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="58sp"
            android:textSize="12sp"
            android:text="   Once you submit the attendance you can not edit "
            android:layout_height="20sp" />

        <Button
            android:id="@+id/no_action"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="80sp"
            android:background="@color/black"
            android:text="NO"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/yes_action"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="80sp"
            android:background="@color/black"
            android:text="YES"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>
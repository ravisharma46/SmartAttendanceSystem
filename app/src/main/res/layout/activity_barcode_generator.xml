<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barcode_generator">


    <android.support.v7.widget.CardView
        android:layout_width="320sp"

        android:layout_height="250sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="236dp"
        app:cardBackgroundColor="#E6E2E2"
        app:cardCornerRadius="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="300sp"
            android:layout_height="80sp"
           android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp"
            app:cardCornerRadius="18sp"
            app:cardElevation="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="#E6E2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/set_barcode"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:background="@color/white" />

        </android.support.v7.widget.CardView>


        <EditText
            android:id="@+id/rollNo"
            android:layout_width="300sp"
            android:hint="Enter 11 digit roll no."
            android:paddingLeft="20sp"
            android:background="@color/white"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="10sp"
            android:inputType="number"
            android:layout_height="40sp" />

        <Button
            android:id="@+id/generate_barcode"
            android:layout_width="170sp"
            android:textColor="@color/white"
            android:text="Generate barcode"
            android:padding="10sp"
            android:background="@color/black"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="180sp"
            android:layout_height="40sp" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
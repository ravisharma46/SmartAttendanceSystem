<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="375sp"
    android:layout_marginTop="35sp"
    tools:context=".CseFragment">

    <!-- TODO: Update blank fragment layout -->


    <Spinner
        android:id="@+id/spinner_select_group"
        android:layout_width="179sp"
        android:layout_marginLeft="180sp"
        android:layout_marginTop="80sp"
        android:layout_height="36sp" />
    <TextView
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:paddingLeft="22sp"
        android:layout_marginTop="80sp"
        android:text="Select Group"
        android:textSize="24sp" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:paddingLeft="22sp"
        android:text="Select Year"
        android:textSize="24sp"/>
    <Spinner
        android:id="@+id/spinner_select_year"
        android:layout_width="179sp"
        android:layout_marginLeft="180sp"
        android:layout_height="36sp"/>




    <TextView
        android:id="@+id/textView3"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:layout_marginTop="40sp"
        android:paddingLeft="22sp"
        android:text="Select Class"
        android:textSize="24sp"/>
    <Spinner
        android:id="@+id/spinner_select_class"
        android:layout_width="179sp"
        android:layout_marginLeft="180sp"
        android:layout_marginTop="40sp"
        android:layout_height="36sp"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:layout_marginTop="120sp"
        android:paddingLeft="22sp"
        android:text="Select Date"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/date_picker"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="120sp"
        android:text="click to choose date"
        android:paddingTop="7sp"
        android:paddingLeft="12sp"
        android:textStyle="bold"
        android:textSize="18sp"/>



    <TextView
        android:id="@+id/textView5"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:layout_marginTop="160sp"
        android:paddingLeft="22sp"
        android:text="Select Time"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/time_picker"
        android:layout_width="200sp"
        android:layout_height="36sp"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="160sp"
        android:text="click to choose time"
        android:paddingTop="7sp"
        android:paddingLeft="12sp"
        android:textStyle="bold"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/start_scan_ece"
        android:layout_width="200sp"
        android:layout_height="46sp"
        android:layout_marginTop="260sp"
        android:layout_marginLeft="80sp"
        android:text="start Scan"
        android:textSize="20sp"/>




</FrameLayout>